{
  "name": "tsmpkg",
  "version": "0.0.3",
  "description": "Tool for setting up and maintaining pure esm module typescript packages",
  "type": "module",
  "files": [
    "bin.js",
    "src",
    "dist"
  ],
  "bin": {
    "tsmpkg": "./bin.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "test": "vitest run",
    "lint": "tsc && eslint ."
  },
  "keywords": [],
  "author": "Alan Christensen",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.2.5",
    "@types/npmcli__package-json": "^2.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1"
  },
  "dependencies": {
    "@npmcli/package-json": "^3.1.0",
    "fs-extra": "^11.1.1"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts"
    },
    "format": "esm",
    "clean": true,
    "dts": true
  },
  "volta": {
    "extends": "../../package.json"
  }
}
